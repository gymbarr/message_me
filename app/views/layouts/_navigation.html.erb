<%# navigation bar made with Semantic UI menu %>
<%# more info at https://semantic-ui.com/collections/menu.html %>
<div class="ui container">
  <div class="ui small menu">
    <%= link_to 'Chatroom', root_path, class: "item" %>
    <a class="item">
      Messages
    </a>
    <div class="right menu">
      <%# dropdown menu with account log in and log out buttons %>
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to 'Sign Out', logout_path, method: :delete, class: "item" %>
          <% else %>
            <%= link_to 'Sign In', login_path, class: "item" %>
          <% end %>
        </div>
      </div>
      <%# sign up button %>
      <% if !logged_in? %>
        <div class="item">
          <%= link_to 'Sign Up', signup_path, class: "ui primary button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>