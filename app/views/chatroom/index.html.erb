<h2 class="ui center aligned icon header">
  <i class="circular comment blue icon"></i>
  Say something
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <%# chat window %>
    <div class="ui fluid blue card chatbox">
      <div class="content">
        <div class="ui feed">
          <%= render @messages %>
        </div>
      </div>
      <%# input message field %>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
              <div class="ui fluid icon input">
                <input type="text" placeholder="Enter a message...">
                <i class="bordered inverted blue edit icon"></i>
              </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  
    <%# vertical menu window %>
    <div class="four wide column">
      <div class="ui fluid blue card chatbox">
        <div class="content">
          <div class="ui inverted vertical menu">
            <a class="active item">
              Home
            </a>
            <a class="item">
              Messages
            </a>
            <a class="item">
              Friends
            </a>
          </div>
        </div>
      </div>
    </div>
</div>