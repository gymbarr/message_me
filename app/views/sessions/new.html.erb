<h2 class="ui center aligned icon header">
  <p>Welcome to MessageMe</p>
  <i class="circular sign-in blue icon"></i>
</h2>
<h3 class="ui center aligned header">Sign In to continue</h3>

<%# divider with two sections - sign in form and sign up button %>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%# sign in form %>
      <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
        <div class="ui form">
          <%# username field %>
          <div class="field">
            <label>Username</label>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <%# password field %>
          <div class="field">
            <label>Password</label>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.submit "Sign In", class: "ui blue submit button" %>
        </div>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big blue button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
